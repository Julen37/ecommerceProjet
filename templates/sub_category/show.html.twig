{% extends 'base.html.twig' %}

{% block title %}SubCategory{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">SubCategory</h1>
    <a href="{{ path('app_sub_category_index') }}" class="btn btn-outline-light mb-2">Back to list</a>
    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sub_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sub_category.name }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="btn btn-warning mb-2">Modify</a>

    {{ include('sub_category/_delete_form.html.twig') }}
</div>
{% endblock %}
