{% extends 'base.html.twig' %}

{% block title %}SubCategories list{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">SubCategories list</h1>
    {% include 'layouts/_flash_message.html.twig'%}
    <a href="{{ path('app_sub_category_new') }}" class="btn btn-success mb-3">Create new</a>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Subcategory</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.name }}</td>
                <td>{{ sub_category.category.name }}</td>
                <td>
                    <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}" class="btn btn-outline-success">Show</a>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="btn btn-outline-warning">Modify</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    
</div>
{% endblock %}
