{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-4 mb-4" >Orders</h1>
        {% include 'layouts/_flash_message.html.twig'%}
        {% for order in orders %}
            <h2>Commande nÂ° {{ order.id }}</h2>
            {% if order.isCompleted ==true %}
                <span class='text-light'>ðŸ—¸ Order delivered : {{ order.createdAt|date }}</span>
            {% else %}
                <span class='text-white'>âœ— Order not delivered : {{ order.createdAt|date }}</span>
            {% endif %}
            <br>
            <span>Informations of the client</span>
            <table  class="table table-striped table-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>City</th>
                </tr>
                <tr>
                    <td>{{order.firstName}}</td>
                    <td>{{order.lastName}}</td>
                    <td>{{order.phone}}</td>
                    <td>{{order.address}}</td>
                    <td>{{order.city.name}}</td>  
                </tr>
            </table>
            <span>Body of the order</span>
            <table  class="table table-striped table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
                {% for product in order.orderProducts %}
                    <tr>
                        <td>{{product.product.name}}</td>
                        <td>{{product.product.price}}</td>
                        <td>{{product.quantity}}</td>  
                        <td>{{product.product.price * product.quantity}} â‚¬</td> 
                    </tr>
                {% endfor %}
            </table>  
            <span>Delivery fees: {{ order.city.shippingCost }} â‚¬</span>
            <h5 class='mb-5'>Total to pay : {{ order.totalPrice }} â‚¬</h5>
            {% if order.isCompleted != true %}
                <a onclick="return confirm ('Do you really want to mark as delivered ?')" href="{{ path('app_orders_is-completed-update', {'id':order.id}) }}" class='btn btn-primary col-2 m-lg-1'>Mark as delivered</a>
            {% endif %}
            <a onclick="return confirm ('Do you really want to delete this order ?')" href="{{ path('app_orders_remove', {'id':order.id}) }}" class='btn btn-danger col-2 m-lg-1'>Delete order</a>
            <hr>
        {% endfor %}
        {{ knp_pagination_render(orders, 'layouts/pagination_template.html.twig') }}
    </div>

{% endblock %}