<div class="toast-container position-fixed bottom-0 end-0 p-3">
    {% for type, messages in app.flashes(['success', 'danger','info']) %}
        {% for message in messages %}
                <div id="liveToast" class="toast alert alert-{{ type }}" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body text-{{type}}">
                            {{ message }}
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
        {% endfor %}
    {% endfor %}
</div>

<script> // pour que ca se ferme 
    document.querySelectorAll(".toast").forEach((toast) => bootstrap.Toast.getOrCreateInstance(toast).show());
</script>