{% if pageCount > 1 %}
    <nav aria-label="...">
        <ul class="pagination justify-content-center mt-4">
            {% if previous is defined %}
                <li class="page-item">
                    <a style="color: #614B6E" href="{{ path(route, query|merge({(pageParameterName):previous})) }}" class="page-link">Previous</a>
                </li>
            {% endif %}
            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item" aria-content="page">
                        <a style="color: grey"href="{{ path(route, query|merge({(pageParameterName):page})) }}" class="page-link">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active" aria-content="page">
                        <a style="background: #614B6E; border-color: #614B6E" href="{{ path(route, query|merge({(pageParameterName):page})) }}" class="page-link">{{ page }}</a>
                    </li>
                {% endif %}
            {% endfor %}
            {% if next is defined %}
                <li class="page-item">
                    <a style="color: #614B6E" class="page-link" href="{{ path(route, query|merge({(pageParameterName):next})) }}">Next</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}