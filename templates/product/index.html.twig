{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">Product</h1>
    {% include 'layouts/_flash_message.html.twig'%}
    <a href="{{ path('app_product_new') }}" class="btn btn-success mb-3">Create new</a>
    <table class="table table-striped table-dark" >
        <thead>
            <tr>
                <th>Stock</th>
                <th>Product</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>
                    {% if product.stock > 0 %}
                        {{ product.stock }}
                    {% else %}   
                        <span class="text-danger">Out of stock</span>
                    {% endif %}
                </td>
                <td>{{ product.name }}</td>
                <td>{{ product.description|slice(0,100) }}...</td>
                <td>{{ product.price }}</td>
                <td>{{ product.image }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-success mb-2">Show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-warning mb-2">Modify</a>
                    <a href="{{ path('app_product_stock_add', {'id': product.id}) }}" class="btn btn-outline-info">Add stock</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
