{% extends 'base.html.twig' %}

{% block title %}Stock History{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">Stock History of : {{product.name}}</h1>
    <a href="{{ path('app_product_index') }}" class="btn btn-outline-light mb-2">Back to list</a>
    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-light mb-2">Back to the product</a>
    <table class="table table-striped table-dark mb-2">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Date (d/m/y)</th>
            </tr>
            {% for productAdded in productsAdded %}
                <tr>
                    <td>{{ productAdded.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ productAdded.quantity }}</td>
                    <td>{{ productAdded.createdAt|date('d/m/Y h:i:s', 'Europe/paris')}}</td> 
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
