{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">Product</h1>
    <a href="{{ path('app_product_index') }}" class="btn btn-outline-light mb-2">Back to list</a>
    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning mb-2">Modify</a>

    {{ include('product/_delete_form.html.twig') }}
</div>
{% endblock %}
