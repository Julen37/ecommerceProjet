{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container"> 
        <h1 class="text-center mt-4 mb-4">List of Categories</h1>

        {% include 'layouts/_flash_message.html.twig'%} {# pour la notification flash  #}

        <a href="{{ path('app_category_new') }}" class="btn btn-success mb-3">Add a category</a>

        <table class='table table-striped table-dark'>
            <tr>
                <th>Name of the category</th>
                <th>Action</th>
            </tr>
            {% for category in categories %}
                <tr>
                    <td>
                        {{ category.name }}
                    </td>
                    <td>
                        <a class="btn btn-outline-warning" href="{{ path('app_category_update', {'id':category.id}) }}">Modify</a>
                        <a onclick= "return confirm('Do you really want to delete this category?')" class='btn btn-danger' href="{{ path('app_category_delete', {'id':category.id}) }}" >Delete</a>
                    </td>
                </tr>
                {% else %}
                <p>Aucune catégorie à afficher</p>
            {% endfor %}
        </table>
    </div>
{% endblock %}
