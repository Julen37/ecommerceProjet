{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}

<div class="container"> 
    <a href="{{ path('app_category_new') }}" class="btn btn-success ">Add a category</a>
        <div class="row">
            {% for category in categories %}
                <div class="card text-bg-dark m-4 col-3 " > 
                    <div class="card-body border-light mb-3 " >
                        <h5 class="card-title">{{category.name}}</h5>
                        <a href="{{ path('app_category_update',{'id': category.id}) }}" class="btn btn-warning ">Modify</a>
                        <a href="{{ path('app_category_delete',{'id': category.id}) }}" class="btn btn-danger ">Delete</a>
                    </div>
                </div>
            {% endfor %}   
        </div>
    </div>


{% endblock %}
