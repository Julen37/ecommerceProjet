{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-4">List of Users</h1>
    {% include 'layouts/_flash_message.html.twig'%}
    <table class="table table-striped table-dark">
        <tr>
            <th>id</th>
            <th>Last name</th>
            <th>First name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.lastname}}</td>
                <td>{{user.firstname}}</td>
                <td>{{user.email}}</td>
                <td>
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </td>
                <td>
                {% if ("ROLE_ADMIN" in user.roles) == false %}
                    {% if ("ROLE_EDITOR" in user.roles) == false %}
                        <a href="{{ path('app_user_update_role', {'id': app.user.id}) }}" onclick= "return confirm('Do you really want to change the role of this user ?')" class="btn btn-outline-warning">Modify Role</a>
                    {% else %} 
                        <a href="" class="btn btn-danger" onclick= "return confirm('Do you really want to delete the role for this user?')">Delete Role</a>
                    {% endif %}
                    <a href="" class="btn btn-danger" onclick= "return confirm('Do you really want to delete this user?')">Delete User</a>
                {% endif %}
                </td>
            </tr>
        {% endfor %}
        
    </table>
</div>
{% endblock %}
